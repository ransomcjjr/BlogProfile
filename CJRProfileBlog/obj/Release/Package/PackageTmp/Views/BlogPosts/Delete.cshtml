@model CJRProfileBlog.Models.BlogPost
@using System.Text.RegularExpressions;
@{
    ViewBag.Title = "Delete";
}
<div class="whitebkg">

<div>
    <div class="text-center">
        <div>&emsp;</div>
       
        <h3>Are you sure you want to delete this post?</h3>
        <p>@Html.ActionLink("BACK TO POST", "Details", "BlogPosts", new { slug = Model.Slug }, null)</p>
        <img src="@Url.Content(Model.MediaURL)" />
        <hr />
    </div>
   
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Updated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Updated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            @{ var shortDesc = Model.Body;
                var result = Regex.Replace(shortDesc, "<.*?>|&.*?;", string.Empty);
            }
            @result
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-offset-1">
            <input type="submit" value="Delete" class="btn btn-warning btn-block"/>
        </div>
    }
</div>
    <div>&emsp;</div>
</div>

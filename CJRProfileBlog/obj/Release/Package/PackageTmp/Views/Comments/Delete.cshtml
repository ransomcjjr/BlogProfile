@model CJRProfileBlog.Models.Comments
@using System.Text.RegularExpressions;
@{
    ViewBag.Title = "Delete";
}

<div class="whitebkg">
    <div class="text-center">
        <div>&emsp;</div>
        <h3 class="fontred">Are you sure you want to delete this comment?</h3>
        <h3>@ViewBag.PostTitle.Title</h3>
        @Html.ActionLink("BACK TO POST", "Details", "BlogPosts", new { slug = ViewBag.PostTitle.Slug }, null)
    </div>
    <hr />
    <dl class="dl-horizontal col-md-offset-2">
        <dt>
            @Html.DisplayNameFor(model => model.Body)
        </dt>

        <dd>
            @{ var shortDesc = Model.Body;
               var result = Regex.Replace(shortDesc, "<.*?>|&.*?;", string.Empty);

            }

            @result
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Created)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Created)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Updated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Updated)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-offset-3">
            <input type="hidden" name="PostId" value="@ViewBag.PostTitle.Id" />
            <input type="submit" value="Delete" class="btn btn-warning btn-block" />
            <div>&emsp;</div>
        </div>
    }
</div>
